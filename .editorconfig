root = true

# Unix-style newlines with a newline ending every file
[*]
charset = utf-8
end_of_line = lf
# insert_final_newline = true
indent_style = space
indent_size = 2
trim_trailing_whitespace = true

[*.{md,yaml,yml}]
trim_trailing_whitespace = false
indent_style = space
indent_size = 2

[*.{c,cc,cpp,html,js,rb,sh,tex}]
indent_style = space
indent_size = 2

[*.py]
indent_style = space
indent_size = 4

[*.go]
indent_style = tab
indent_size = 4

